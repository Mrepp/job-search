{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "career-tree.schema.json",
  "title": "Career Tree",
  "description": "Schema for career progression tree JSON file",
  "type": "object",
  "required": ["generated_date", "current_position", "nodes"],
  "properties": {
    "generated_date": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of generation"
    },
    "profile_hash": {
      "type": "string",
      "description": "Hash of user profile used for generation"
    },
    "current_position": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "level": {
          "type": "string",
          "description": "Seniority level (e.g., 'Senior', 'Staff', 'Principal')"
        },
        "years_in_role": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "type"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1,
            "description": "Unique identifier for this node"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["current", "target", "stretch", "lateral", "alternative"],
            "description": "Node type in career progression"
          },
          "level": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "typical_years": {
            "type": "string",
            "description": "Typical years of experience for this role"
          },
          "salary_range": {
            "type": "object",
            "properties": {
              "min": { "type": "number" },
              "max": { "type": "number" },
              "currency": { "type": "string", "default": "USD" }
            }
          },
          "required_skills": {
            "type": "array",
            "items": { "type": "string" }
          },
          "gap_skills": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Skills needed to reach this position"
          },
          "connections": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["to"],
              "properties": {
                "to": {
                  "type": "string",
                  "description": "ID of connected node"
                },
                "relationship": {
                  "type": "string",
                  "enum": ["promotion", "lateral", "pivot", "prerequisite"]
                }
              }
            }
          }
        }
      },
      "minItems": 1
    },
    "pathways": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "nodes"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Pathway name (e.g., 'IC Track', 'Management Track')"
          },
          "description": {
            "type": "string"
          },
          "nodes": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Ordered list of node IDs in this pathway"
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "target_node": { "type": "string" },
          "priority": {
            "type": "string",
            "enum": ["P0", "P1", "P2", "P3"]
          },
          "rationale": { "type": "string" },
          "timeline": { "type": "string" },
          "action_items": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
