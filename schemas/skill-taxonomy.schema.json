{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "skill-taxonomy.schema.json",
  "title": "Skill Taxonomy",
  "description": "Hierarchical skill facets with keyword mappings for inference. For skills not defined here, Claude generates facets on-demand from context.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "skills": {
      "type": "object",
      "description": "Predefined skill facets indexed by skill name (lowercase)",
      "additionalProperties": {
        "$ref": "#/definitions/skillFacets"
      }
    },
    "_meta": {
      "type": "object",
      "properties": {
        "generated_facets": {
          "type": "string",
          "description": "For skills not in taxonomy, Claude infers facets from resume/project context"
        }
      }
    }
  },
  "definitions": {
    "skillFacets": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/facet"
      }
    },
    "facet": {
      "type": "object",
      "required": ["display", "keywords"],
      "properties": {
        "display": {
          "type": "string",
          "description": "Human-readable facet name"
        },
        "keywords": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Keywords that indicate this facet in resume/project text"
        },
        "components": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Specific technologies/libraries within this facet"
        }
      }
    }
  },
